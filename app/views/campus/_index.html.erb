<% provide(:title, @campus_name) %>
<% provide(:keywords, @keywords) %>
<% provide(:description, @description) %>

<div class="small-12">
  <section class="main-photo bg-img fast-height-trans" id=<%= @campus_main_pic_id %>></section>
</div>

<div class="row text-center">
  <section class="separation-1"></section>    
  <h1><strong><%= @campus_org_name %></strong></h1>
  <section class="separation-1"></section>    
</div>

<!-- Not sure what this is doing? -->
<div class="row">
  <%= @feed_output %>
</div>

<div class="row" data-equalizer>
  <div class="small-12 medium-4 medium-push-8 large-4 large-push-8 columns text-center <%= @announcements_bg_color1_class %>" data-equalizer-watch>
    <br><br><br>
    <h4 class="serif"><strong><em><%= @rally_name %></em></strong></h4>
    <h6 class="serif"><%= @rally_datetime %></h6>
    <h6 class="serif">Location: <%= @rally_location %></h6>
    <br>
    <h4 class="serif"><strong><em><%= @church_name %></em></strong></h4>
    <h6 class="serif"><%= @church_datetime %></h6>
    <h6 class="serif"><%= @church_location %></h6>
    <br><br><br>
  </div>
  <div class="small-12 medium-8 medium-pull-4 large-8 large-pull-4 columns orb-bg <%= @announcements_bg_color2_class %>" data-equalizer-watch>
    <ul class="example-orbit-content" data-orbit data-option="slide_number:false;" >
      <% @parsed_entries.each do |entry| %>
      <li data-orbit-slide="headline-1">
        <div class="text-center">
          <section class="separation-2"></section>
          <h3 class="white"><%= entry[:title] %></h3>
          <section class="separation-1"></section>
          <h5 class="serif white"><%= entry[:date] %></h5>
          <h5 class="serif white"><%= entry[:time] %></h5>
          <h5 class="serif white">Location: <%= entry[:location] %></h5>
          <section class="separation-2"></section>
        </div>
      </li>
      <% end %>
<!--  </div> -->
      <li data-orbit-slide="headline-5">
        <div class="text-center">
          <section class="separation-2"></section>
          <section class="separation-2"></section>
          <section class="separation-2"></section>
          <% if @fb_campus_link == 'none' %>
            <h3 class="serif white">Welcome to the Rutgers In Christ Alone Ministry page!</h3>
          <% else %>
            <h3 class="serif white">Click <a href="<%= @fb_campus_link %>" class="usc-link fast-color-trans" target="_blank">here</a> to check out more events on our Facebook page!</h3>
          <% end %>
          <section class="separation-2"></section>
          <section class="separation-2"></section>
          <section class="separation-2"></section>
        </div>
      </li>
    </ul>
  </div>
</div>

<div class="small-12">
  <section class="main-photo bg-img-top fast-height-trans" data-interchange="[<%= image_path(@campus_group_small_pic) %>, (default)], [<%= image_path(@campus_group_pic) %>, (medium)]"></section>
</div>

<section class="separation-2"></section>

<div class="row">
  <div class="medium-8 columns text-center small-centered" data-equalizer>
    <div class="small-12 medium-6 columns text-center" data-equalizer-watch>
      <figure class="fig-link">
        <h3><strong>Small Groups</strong></h3>
        <%= link_to "", @small_groups_path, id: @small_groups_pic_id, class: "circular bg-circular inline-block fast-opacity-trans" %>
      </figure>
    </div>
    <div class="small-12 medium-6 columns text-center" data-equalizer-watch>
      <figure class="fig-link">
        <h3><strong>Meet The Leaders</strong></h3>
        <%= link_to "", @leaders_path, id: @leaders_pic_id, class: "circular bg-circular inline-block fast-opacity-trans" %>
      </figure>
    </div>
  </div>
</div>

<section class="separation-2"></section>

<div class="row">
  <div class="medium-6 columns text-center small-centered">
    <div class="small-12 medium-12 large-6 columns text-center">
      <%= link_to "ICA Home", root_path, class: "responsive-button set-width" %>
    </div>
    <div class="small-12 medium-12 large-6 columns text-center">
      <%= link_to "Get Connected", contact_path, class: "responsive-button set-width" %>
    </div>
  </div>
</div>

<section class="separation-2"></section>

<div class="row hidden-for-small-only">
  <div class="small-12 columns text-center">
    <h1>Upcoming Events</h1>
    <iframe src="<%= @gcal_path %>" id="UCLAcalendar"></iframe>
  </div>
</div>

<section class="separation-2 hidden-for-small-only"></section>
